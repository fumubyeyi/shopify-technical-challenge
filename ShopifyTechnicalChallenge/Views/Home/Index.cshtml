@model IEnumerable<Inventory>
@{
    ViewData["Title"] = "Home Page";

}


<div style="width:90%; margin:0 auto" class="tablecontainer">
    <a class="btn btn-primary" asp-action="Create" asp-controller="Home" style="margin-bottom:20px; margin-top:20px;">Create</a>
    <a class="btn btn-secondary" asp-action="Export" asp-controller="Home" style="margin-bottom:20px; margin-top:20px;">Export to CSV</a>
    <table id="inventory" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
        <thead class="thead-light">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Category</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Category</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Delete" asp-controller="Home" asp-route-id="@item.Id">Delete</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
   
